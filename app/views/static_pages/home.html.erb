<% if logged_in? %>
  <section class="featured-posts">
  <div class="section-title">
    <h2><span><%= t ".recently_published" %></span></h2>
  </div>
  <div class="card-columns listfeaturedtag">
    <%= render partial: "books/book", collection: @recently_published, as: :book %>
  </div>
  <br>
  <div class="section-title">
    <h2><span><%= t ".completed" %></span></h2>
  </div>
  <div class="card-columns listfeaturedtag">
    <%= render partial: "books/book", collection: @completed, as: :book %>
  </div>
  <br>
  <div class="section-title">
    <h2><span><%= t ".on_going" %></span></h2>
  </div>
  <div class="card-columns listfeaturedtag">
    <%= render partial: "books/book", collection: @on_going, as: :book %>
  </div>
  </section>
<% else %>
  <div class="mainheading center">
    <h1 class="sitetitle"><%= t ".site_title" %></h1>
    <p class="lead"><%= t ".lead" %></p>
    <%= link_to t(".sign_up_now"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
