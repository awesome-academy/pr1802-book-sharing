<% provide :title, t(".title") %>
<h1><%= t ".title" %></h1>

<ul class="users">
  <%= render @users %>
</ul>
<% if current_user.admin? && !current_user?(@user )%>
  <p>
    Download: 
    <%= link_to t(".export_csv"), users_path(format: "csv") %>
    <%= link_to t(".export_xls"), users_path(format: "xls") %>
  </p>
<% end %>

<%= will_paginate @users,
  renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer,
  class: "d-flex justify-content-center" %>
